{
  "name": "jamquery-node",
  "version": "0.1.0",
  "engines": {
    "node": "10.14.1"
  },
  "description": "Jamquery Node.js backend",
  "main": "dist/index.js",
  "files": [
    "dist/index.js"
  ],
  "scripts": {
    "start": "npm-run-all -lp watch:**",
    "watch:client": "webpack --mode=development --watch",
    "watch:server": "source config/setup-env.sh; nodemon --exec babel-node src/index.js",
    "build": "npm-run-all -ls build:**",
    "build:client": "webpack --mode=production",
    "build:server": "babel src --out-dir dist",
    "serve": "source config/setup-env.sh; export NODE_ENV=production; node dist/index.js"
  },
  "author": "tura",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "eslint": "^5.9.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jshint": "^2.9.6",
    "minimist": "^1.2.0",
    "mysql": "^2.16.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@types/express": "^4.16.0",
    "babel-loader": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2"
  }
}
